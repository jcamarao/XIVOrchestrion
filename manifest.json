{
    "manifest_version": 2,
    "name":"XIVOrchestrion", 
    "version":"1.0.0", 
    "description": "XIVOrchestrion is an extension that brings Final Fantasy XIV night/day themes to your browser depending your system's time.",
    "author": "Jake",
    "browser_specific_settings": {
        "gecko": {
          "id": "xiv@orchestrion.play"
        }
    },
    "icons": {
        "128": "icons/128.png"
    },
    "browser_action": {
        "default_icon": "icons/128.png",
        "default_title": "XIVOrchestrion",
        "default_popup": "popup.html"
      },
    "background": {
        "scripts": [ "howler.js", "main.js", "setup.js", "listener.js"]
    },
    "permissions": [
        "storage"
    ]
}